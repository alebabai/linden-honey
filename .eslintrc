{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": [
            "off"
        ],
        "indent": [
            "warn",
            4
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "no-undef": [
            "error"
        ],
        "eqeqeq": [
            "error",
            "always", {
                "null": "ignore"
            }
        ],
        "space-before-blocks": [
            "warn"
        ],
        "space-infix-ops": [
            "warn"
        ]
    }
}
